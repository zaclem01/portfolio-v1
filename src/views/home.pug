extends templates/_base.pug

block content
    div.content
        div.hero.sectionContainer
            div.hero_intro.u-centeredText
                span.hero_intro_name Zac Clemans
                hr.hero_intro_divider.divider
                span.hero_intro_tagline.tagline Web Developer - Learner - Awesome Dude
        section#workSection.work.sectionContainer
            header.work_header.u-centeredText
                h1.work_header_name.sectionName Work
                hr.work_header_divider.divider
                span.work_header_tagline.tagline Take a look at what I've done so far
            div.work_content
                div.work_content_projectSlide
                    a(href="./fullmetal.html")
                        img.projectSlide_img(src=require("../images/fullmetal-screenshot.png"))
                        div.projectSlide_title Fullmetal Photography (WIP)
                div.work_content_projectSlide
                    a(href="./pollerize.html")
                        img.projectSlide_img(src=require("../images/pollerize-screenshot.png"))
                        div.projectSlide_title Pollerize
                div.work_content_projectSlide
                    a(href="http://codepen.io/thalpha/full/eJpryd/", target="_blank")
                        img.projectSlide_img(src=require("../images/weather-widget-screenshot.png"))
                        div.projectSlide_title Weather Widget
                div.work_content_projectSlide
                    a(href="http://codepen.io/thalpha/full/ZWPadm/", target="_blank")
                        img.projectSlide_img(src=require("../images/recipe-box-screenshot.png"))
                        div.projectSlide_title Recipe Box
                div.work_content_projectSlide
                    a(href="./calculator.html")
                        img.projectSlide_img(src=require("../images/calc-screenshot.png"))
                        div.projectSlide_title OOLO Calculator
        section#skillsSection.skills.sectionContainer
            header.skills_header.u-centeredText
                h1.skills_header_name.sectionName Skills
                hr.skills_header_divider.divider
            div.skills_content
                div.skills_content_skill
                    img.skill_icon(src=require("../images/html-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/css3-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/js-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/jquery-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/sass-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/gulp-logo.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/git-icon.png"))
                div.skills_content_skill
                    img.skill_icon(src=require("../images/react-logo.svg"))
        section#aboutSection.about.sectionContainer
            header.about_header.u-centeredText
                h1.about_header_name.sectionName About Me
                hr.about_header_divider.divider
            div.about_content
                div.about_content_description
                    p.descriptionText.u-emphasis Meet Zac, your future web developer!
                    p.descriptionText 
                        | I am a passionate self-taught developer who fell in love 
                        | with programming and creating websites/apps two years ago. 
                        | Nothing compares to the feeling of creating something from nothing.
                    p.descriptionText 
                        | When I'm not hacking away at code, I am spending time with my daughter, 
                        | playing video games with my fiance, or working out.
                div.about_content_profileImg
                    img(src=require("../images/profile-image.jpg"))
        section#contactSection.contact.sectionContainer
            header.contact_header.u-centeredText
                h1.contact_header_name.sectionName Contact
                hr.contact_header_divider.divider
            div.contact_content
                form.contact_content_email(action="mailto:zaclem01@gmail.com?subject=Email%20from%your%portfolio", method="POST", enctype="text/plain")
                    input.email_emailName(type="text", name="Email", placeholder="Email")
                    input.email_name(type="text", name="Name" placeholder="Your Name")
                    textarea.email_messageArea(name="Body", placeholder="Message (sent as plain text, please do not include sensitive information)")
                    button.email_submit(type="submit", value="send") Send
                div.contact_content_social
                    div.social_icon
                        a(href="https://www.linkedin.com/in/zacclemans", target="_blank")
                            img.social_icon_img(src=require("../images/linkedin-icon.png"))
                    div.social_icon
                        a(href="https://github.com/zaclem01", target="_blank")
                            img.social_icon_img(src=require("../images/github-icon.png"))
                    div.social_icon
                        a(href="http://codepen.io/thalpha/", target="_blank")
                            img.social_icon_img(src=require("../images/codepen-icon.png"))